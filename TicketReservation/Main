import java.util.Scanner;
public class Main()
{
    public static void main(String[]args)
    {
        Scanner sc=new Scanner(System.in);
        TicketSystem tb=new TicketSystem();

        while(true)
        {
            System.out.println("\n1.Book Ticket");
            System.out.println("2.Cancel Ticket");
            System.out.println("3.Available Tickets");
            System.out.println("4.Booked Tickets");
            System.out.println("5.RAC Tickets");
            System.out.println("6.Waiting List");
            System.out.println("7.Exit");

            int choice=sc.nextInt();

            switch(choice)
            {
                case 1:
                    System.out.println("Name: ");
                    String name=sc.next();

                    System.out.print("Age: ");
                    int age = sc.nextInt();

                    System.out.print("Preference (L/M/U): ");
                    char pref = sc.next().charAt(0);

                    tb.bookTicket(name,age,pref);
                    break;

                case 2:
                    System.out.println("Enter passenger id: ");
                    int id=sc.nextInt();
                    tb.cancelTicket(id);
                    break;

                case 3:
                    tb.printAvailable();
                    break;

                case 4:
                    tb.printBooked();
                    break;

                case 5:
                    tb.printRAC();
                    break;

                case 6:
                    tb.printWait();
                    break;

                case 7:
                    System.exit(0);
            }

        }
    }
}